mixin card-search(title)
    div(class="search_card")
        div(class="card_header")
            h1=title
        div(class="card_body")
            div()
                h3 Прибытие 
                input(type="text" id="ui-datepicker-1" placeholder="ДД.ММ.ГГГГ")
            div()
                h3 Выезд
                input(type="text" id="ui-datepicker-2" placeholder="ДД.ММ.ГГГГ")
            div()
                h3 Гости
                select(placeholder="Сколько гостей")
                    option(value="" selected disabled) Сколько гостей
                    option(value="adult_visiter") Взрослые
                    option(value="child_visiter") Дети
                    option(value="baby_visiter") Младенцы
        div(class="card_down")
            
                div(class="takeit")
                    a(href="./filters.html")
                        h3 Подобрать
mixin card-reg()
    .card-reg
        div(class="card")
            div(class="card_header")
                h1 Регистрация аккаунта
            div(class="card_body")

            div(class="card_down")


mixin card-filters(num, lux)
    - var random_lux = Math.random() >= 0.5;
    - var random_star = Math.floor(Math.random() * (5 - 4 + 1)) + 4;

    div(class="res_card", onclick="location.href='./detail.html'")
        div(class="res_card-header")
        div(class="res_card-body")
            div 
                h4 № 
                h4=num 
            div
                if random_lux
                    h3 Люкс
            div 
                h4 9 999₽ 
                p(class="small-text") Сутки
        div(class="res_card-footer")
            div
                img(src=`/static/img/filters/star${random_star}.png`)
            div
                h4 777
                p(class="small-text") Отзывов


