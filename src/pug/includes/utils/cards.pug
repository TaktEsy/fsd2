mixin card-search(title)
    .search-card
        div(class="search_card card")
            div(class="search_hotel-header")
                h1=title
            div(class="card-body")
                div()
                    h3 Прибытие 
                    input(type="text" class="date1" placeholder="ДД.ММ.ГГГГ")
                div()
                    h3 Выезд
                    input(type="text" class="date2" placeholder="ДД.ММ.ГГГГ")
                div()
                    h3 Гости
                    select(placeholder="Сколько гостей")
                        option(value="" selected disabled) Сколько гостей
                        option(value="adult_visiter") Взрослые
                        option(value="child_visiter") Дети
                        option(value="baby_visiter") Младенцы
            div(class="card-down")
                div(class="takeit")
                    a(href="./filters.html") Подобрать

mixin card-filters(num, lux)
    - var random_lux = Math.random() >= 0.5;
    div(class="res_card")
        div(class="res_card-header")
        div(class="res_card-body")
            div 
                h4 № 
                h4=num 
            div    
                if random_lux
                    h3 Люкс
            div 
                h4 9 999₽ 
                p(class="small-text") Сутки
        div(class="res_card-footer")
            img(src="../../../img/filters/star4.png")

